%h2 会員登録
= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  = render "devise/shared/error_messages", resource: resource
  .field
    .head__icon
      必須
    = f.label :nickname,"ニックネーム"
    %br/
    = f.text_field :nickname, placeholder: "例）フリマ太郎", autofocus: true, autocomplete: "nickname"
  .field
    .head__icon
      必須
    = f.label :email,"メールアドレス"
    %br/
    = f.email_field :email, placeholder: "PCまたは携帯",autocomplete: "email"
  .field
    .head__icon
      必須
    = f.label :password,"パスワード"
    %br/
    = f.password_field :password, placeholder:"7文字以上" , autocomplete: "new-password"
  .field
    .head__icon
      必須
    = f.label :password_confirmation,"確認用パスワード"
    %br/
    = f.password_field :password_confirmation, placeholder:"7文字以上", autocomplete: "new-password"

    %h3 本人確認
  .field
    .head__icon
      必須
    = f.label :first_name,"氏名"
    %br/
    = f.text_field :first_name, placeholder:"例）山田", autocomplete: "first_name"
  .filed
    .head__icon
      必須
    = f.label :last_name,"名前"
    %br/
    = f.text_field :last_name, placeholder:"例）太郎", autocomplete: "last_name"
    .field
      .head__icon
      必須
    = f.label :first_name_kana,"氏名(カナ）"
    %br/
    = f.text_field :first_name_kana, placeholder:"例）ヤマダ", autocomplete: "first_name_kana"
  .filed
    .head__icon
      必須
    = f.label :last_name_kana,"名前（カナ）"
    %br/
    = f.text_field :last_name_kana, placeholder:"例）タロウ", autocomplete: "last_name_kana"
  .filed
    .head__icon
      必須
    = f.label :birth_year,"生年月日"
    %br/
    != sprintf(f.date_select(:birth_year, prefix:'birthday',with_css_classes:'XXXXX', prompt:"--",use_month_numbers:true, start_year:Time.now.year, end_year:1900, date_separator:'%s'),'年','月')+'日'

  .head__icon
    必須
  .actions
    = f.submit "次へ"
= render "devise/shared/links"
